<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    tools:context="com.flaze.MainActivity">

    <HorizontalScrollView
        android:id="@+id/horizontalScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="bottom"
        tools:targetApi="m">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- White Keys-->

            <Button
                android:id="@+id/c3"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="c3"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/d3"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/c3"
                android:layout_toRightOf="@id/c3"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="d3"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/e3"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/d3"
                android:layout_toRightOf="@id/d3"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="e3"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/f3"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/e3"
                android:layout_toRightOf="@id/e3"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="f3"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/g3"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/f3"
                android:layout_toRightOf="@id/f3"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="g3"
                tools:targetApi="lollipop" />


            <Button
                android:id="@+id/a3"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/g3"
                android:layout_toRightOf="@id/g3"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="a3"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/b3"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/a3"
                android:layout_toRightOf="@id/a3"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="b3"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/c4"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/b3"
                android:layout_toRightOf="@id/b3"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="c4"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/d4"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/c4"
                android:layout_toRightOf="@id/c4"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="d4"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/e4"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/d4"
                android:layout_toRightOf="@id/d4"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="e4"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/f4"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/e4"
                android:layout_toRightOf="@id/e4"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="f4"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/g4"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/f4"
                android:layout_toRightOf="@id/f4"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="g4"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/a4"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/g4"
                android:layout_toRightOf="@id/g4"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="a4"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/b4"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/a4"
                android:layout_toRightOf="@id/a4"
                android:backgroundTint="@color/off_white"
                android:stateListAnimator="@null"
                android:tag="b4"
                tools:targetApi="lollipop" />

            <!--Black Keys-->
            <Button
                android:id="@+id/c3Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/c3"
                android:layout_toRightOf="@id/c3"
                android:backgroundTint="@color/black"
                android:tag="c3#"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/d3Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/d3"
                android:layout_toRightOf="@id/d3"
                android:backgroundTint="@color/black"
                android:tag="d3#"
                tools:targetApi="lollipop" />


            <Button
                android:id="@+id/f3Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/f3"
                android:layout_toRightOf="@id/f3"
                android:backgroundTint="@color/black"
                android:tag="f3#"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/g3Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/g3"
                android:layout_toRightOf="@id/g3"
                android:backgroundTint="@color/black"
                android:tag="g3#"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/a3Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/a3"
                android:layout_toRightOf="@id/a3"
                android:backgroundTint="@color/black"
                android:tag="a3#"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/c4Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/c4"
                android:layout_toRightOf="@id/c4"
                android:backgroundTint="@color/black"
                android:tag="c4#"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/d4Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/d4"
                android:layout_toRightOf="@id/d4"
                android:backgroundTint="@color/black"
                android:tag="d4#"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/f4Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/f4"
                android:layout_toRightOf="@id/f4"
                android:backgroundTint="@color/black"
                android:tag="f4#"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/g4Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/g4"
                android:layout_toRightOf="@id/g4"
                android:backgroundTint="@color/black"
                android:tag="g4#"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/a4Sharp"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_marginStart="-25dp"
                android:layout_marginLeft="-25dp"
                android:layout_toEndOf="@id/a4"
                android:layout_toRightOf="@id/a4"
                android:backgroundTint="@color/black"
                android:tag="a4#"
                tools:targetApi="lollipop" />


        </RelativeLayout>
    </HorizontalScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translucent">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/selector"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_margin="5dp"
            style="@android:style/Widget.Spinner"
            android:spinnerMode="dialog"
            android:entries="@array/instrument_array"
            android:prompt="@string/instrument_prompt"
            tools:targetApi="lollipop" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/white"
            android:thumbTint="@color/off_white"
            tools:targetApi="lollipop" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
